        "currency": "INR",

       

        "order_id": undefined, //This is a sample Order ID. Pass the `id` obtained in the response of Step 1
        "handler": function (response) {
          Cod()
        },
      };
      var rzp1 = new Razorpay(options);
      rzp1.open();
    }
