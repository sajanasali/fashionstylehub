{{>adminheader}}
    <h1 style="text-align: center;">Category List</h1>
    
    <section>
    <div class="container ">
        <div style="align-items:end;">
      <a class="btn btn-primary" href="/admin/addcategory" type="submit">Add Category</a>
    </div>
   <div class="row" >
    
    <div class="col-md-3" style="width: 60px;">
      {{#each categorydata}}
    <div class="card" style="width: 60rem ;">
     
       
        <div class="card-body" >
          <h5 class="card-title">{{this.name}}</h5>
          <p class="card-text">{{this.description}}</p>
          <div style="display: flex; ">
           <a href="/admin/editCategory/{{this._id}}" class="btn btn-primary" style="margin-right: 3px;">Edit</a>
           
         {{#if this.unlist}}
                <a class="btn btn-primary" href="/admin/listcat?id={{this._id}}">list </a>
                {{else}}
                
                <a class="btn btn-primary" href="/admin/unlistcat?id={{this._id}}">unlist
</a>
                {{/if}}
            
          </div>
          
        </div>
        
    </div>
    {{/each}}
        </div>
      </div>
    </div>
  </section>
    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
