{{> userheader}}

<div class="container-fluid pt-4 px-4">
  <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3">
    {{#each couponData}}
    <div class="col mb-4">
      <div class="card h-100">
        <div class="card-header py-3">
          <h5 class="mb-0">Coupon</h5>
        </div>
        <div class="card-body">
          <ul class="list-group list-group-flush">
            <li class="list-group-item d-flex justify-content-between align-items-center border-0 px-0 pb-0">
              Coupon code:
              <span>{{this._doc.code}}</span>
            </li>
            <li class="list-group-item d-flex justify-content-between align-items-center px-0">
              Discount percent:
              <span>{{this._doc.discount}}%</span>
            </li>
            <li class="list-group-item d-flex justify-content-between align-items-center px-0">
              Expiry date:
              <span>{{this._doc.expiryDate}}</span>
            </li>
          </ul>

          <a href="/admin/delete_cpn?id={{this._id}}" onclick="deleteCoupon(event)" type="button"
            class="btn btn-secondary btn-sm btn-block mt-3">
            Delete coupon
          </a>

        </div>
      </div>
    </div>
    {{/each}}
  </div>
  <div class="m-l-auto p-r-15 p-b-15">
    <a href="/admin/addNewcoupon" class="btn btn-primary" style="">Add new coupon</a>
  </div>
</div>


{{> userfooter}}