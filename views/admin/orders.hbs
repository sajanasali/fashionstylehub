{{>adminheader}}







<div class="container-fluid bg-secondary mb-5">
        <div class="d-flex flex-column align-items-center justify-content-center" style="min-height: 100px">
            <h4 class="font-weight-semi-bold text-uppercase mb-3">User Orders</h4>
            <div class="d-inline-flex">
                
                
            </div>
        </div>
    </div>



<div class="container pd-10">
  <div class="col py-3">
    <table class="table table-hover table-bordered">
      <thead class="table-info">
        <tr>
         
          <th scope="col">Date</th>
          <th scope="col">Order ID</th>
          <th scope="col">Payment Method</th>
          <th scope="col">Status</th>
          <th scope="col">View Details</th>
          <th scope="col">Change Status</th>
        </tr>
      </thead>
      <tbody>
        {{#each ordersData}}
        <tr>
         
          <td>{{this.date}}</td>
          <td>{{this.orderId}}</td>
          <td>{{this.paymentMethod}}</td>
          <td>{{this.status}}</td>
          <td>
            <a href="/admin/order_details?id={{this._id}}" class="btn btn-secondary">View Details</a>
          </td>
          <td>
            <form action="/admin/change_status?id={{this._id}}" method="post">
              <div class="input-group">
                 {{#unless (or (eq this.status "Cancelled") (eq this.status "Returned")) }} 
                <select name="status" class="form-select">
                
                  <option selected>Change order Status</option>
                  
                  <option value="Shipped">Shipped</option>
                  <option value="Delivered">Delivered</option>
              
                </select>
                  
                <button type="submit" class="btn btn-danger">Submit</button>
                {{/unless}}
              </div>
            </form>
          </td>
        </tr>
        {{/each}}
      </tbody>
    </table>

    
  </div>
</div>

</div>







